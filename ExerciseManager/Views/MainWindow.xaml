<Window x:Class="ExerciseManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExerciseManager"
        xmlns:viewmodels="clr-namespace:ExerciseManager.ViewModels"
        xmlns:views="clr-namespace:ExerciseManager.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ContentControl Content="{Binding CurrentViewModel}" >
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
                <views:LoginView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:UserPanelViewModel}">
                <views:UserPanelView/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
